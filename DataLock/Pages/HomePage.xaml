<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DataLock.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:page="using:DataLock.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:local="using:CommunityToolkit.WinUI.Controls" xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:modules="using:DataLock.Modules"

    Background="{ThemeResource DesktopAcrylicTransparentBrush}">

    <Page.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="#2D2D3C"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <StackPanel MaxWidth="1100" HorizontalAlignment="Stretch">
                <TextBlock Grid.Row="0" Text="Home" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,24"/>

                <Grid Grid.Row="1" Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                        <Image Source="ms-appx:///Assets/placeholder-image.png" Width="48" Height="48" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Brad" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Text="Nitro AN515-54" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <HyperlinkButton Content="Rename" Padding="0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center" Margin="24,0,0,0">
                        <FontIcon Glyph="&#xE701;" FontSize="20"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="FJSW-St.5.0" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Text="Connected, secured" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center" Margin="24,0,0,0">
                        <FontIcon Glyph="&#xE777;" FontSize="20"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Windows Update" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Text="Attention needed" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Spacing="24">
                        <StackPanel Spacing="4">
                            <TextBlock Margin="5 20" Text="Cryptography Page" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <local:SettingsCard x:Name="cryptography_encryptPage"
                               Description="Encrypt files using various algorithms."
                               Header="Encryption Page"
                               HeaderIcon="{ui:FontIcon Glyph=&#xE72E;}"
                               IsClickEnabled="True">
                                <!--<TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Text="This is content" />-->
                            </local:SettingsCard>
                            <local:SettingsCard x:Name="cryptography_decryptPage"
                                                Description="Decrypt files using various algorithms."
                                                Header="Decryption Page"
                                                HeaderIcon="{ui:FontIcon Glyph=&#xE785;}"
                                                IsClickEnabled="True">
                                <!--<TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
Text="This is content" />-->
                            </local:SettingsCard>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Bluetooth devices" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBlock Text="Manage, add, and remove devices" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,0,0,8"/>
                            <Grid ColumnSpacing="12" Padding="12" Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondary}" CornerRadius="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xE702;" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Bluetooth"/>
                                    <TextBlock Text="Discoverable as 'BRAD'" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="On" Margin="0,0,8,0" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <ToggleSwitch Grid.Column="3" IsOn="True" VerticalAlignment="Center" MinWidth="0" HorizontalAlignment="Right"/>
                            </Grid>
                            <Grid ColumnSpacing="12" Padding="12" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon Grid.Column="0" Glyph="&#xEADF;" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="FIIO Key Pro"/>
                                    <TextBlock Text="Not connected" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                                <Button Grid.Column="2" Content="Connect" MinWidth="80" VerticalAlignment="Center"/>
                                <Button Grid.Column="3" VerticalAlignment="Center" Background="Transparent" BorderThickness="0" Margin="4,0,0,0">
                                    <FontIcon Glyph="&#xE712;" FontSize="16"/>
                                </Button>
                            </Grid>
                            <Grid Padding="12" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <HyperlinkButton Grid.Column="0" Content="View all devices" VerticalAlignment="Center" Padding="0"/>
                                <Button Grid.Column="1" Style="{StaticResource AccentButtonStyle}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <FontIcon Glyph="&#xE710;" FontSize="16"/>
                                        <TextBlock Text="Add device"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Spacing="24">
                        <StackPanel Spacing="8" Padding="16" Background="{ThemeResource LayerOnMicaBaseAltFillColorSecondary}" CornerRadius="4">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <!--Font Icon change via status-->
                                <FontIcon Glyph="&#xE7BA;" FontSize="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Security Setting" Style="{StaticResource SubtitleTextBlockStyle}" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Some settings are not configured. " TextWrapping="Wrap" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <ProgressBar Value="80" Margin="0,8,0,4"/>
                            <TextBlock Text="4 out of 5 settings" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <Button Content="Configure" Margin="0,8,0,0"/>
                        </StackPanel>

                        <StackPanel Spacing="4" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="4">
                            <local:SettingsCard x:Name="software_password_setting"
                                                Description="Set up password for this software. "
                                                Header="Password"
                                                HeaderIcon="{ui:FontIcon Glyph=&#xE75F;}"
                                                IsClickEnabled="True">
                            </local:SettingsCard>

                            <local:SettingsCard x:Name="software_bio_setting"
                                Description="Add fingerprint authtication for this software. "
                                Header="Fingerprint"
                                HeaderIcon="{ui:FontIcon Glyph=&#xE928;}"
                                IsClickEnabled="True">
                            </local:SettingsCard>

                            <local:SettingsCard x:Name="software_facial_setting"
                                                Description="Add facial authtication for this software. "
                                                Header="Face"
                                                HeaderIcon="{ui:FontIcon Glyph=&#xEB68;}"
                                                IsClickEnabled="True">
                            </local:SettingsCard>
                        </StackPanel>

                        <StackPanel Spacing="8" Padding="16" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="4">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE73E;" FontSize="20" VerticalAlignment="Center" Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>
                                <TextBlock Text="Never lose access to your account" Style="{StaticResource SubtitleTextBlockStyle}" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Add a recovery phone number to make sure you can always get in to your account." TextWrapping="Wrap" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <Button Content="Add now" Style="{StaticResource AccentButtonStyle}" Margin="0,8,0,0"/>
                        </StackPanel>

                    </StackPanel>

                </Grid>
            </StackPanel>
            

        </Grid>
    </ScrollViewer>
</Page>
