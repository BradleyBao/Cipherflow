<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DataLock.Pages.EncryptPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:page="using:DataLock.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:modules="using:DataLock.Modules"
    mc:Ignorable="d"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:local="using:CommunityToolkit.WinUI.Controls"
    Background="{ThemeResource DesktopAcrylicTransparentBrush}">

    <ScrollViewer Margin="35 10">
        <StackPanel Padding="20" Spacing="16">

            <!-- 信息提示条 -->
            <InfoBar 
            Title="Fonts Control Panel is being redirected here." 
            Message="To access the legacy interface, click this link or navigate to C:\WINDOWS\Fonts in File Explorer." 
            IsOpen="True" 
            Severity="Informational" />

            <!-- 字体拖放区 -->
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="30" CornerRadius="8" Background="{ThemeResource SolidBackgroundFillColorTransparent}" HorizontalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                    <FontIcon Glyph="&#xE710;" FontSize="36" Foreground="Black" />
                    <TextBlock Text="Drag and drop to add files/folders" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" />
                    <TextBlock Text="Drag files from File Explorer or your desktop and drop them here to add files to the encryption list." 
                           TextWrapping="Wrap" Width="300" HorizontalAlignment="Center" FontSize="12" Foreground="Gray" />
                    <Button HorizontalAlignment="Center" Content="Browse and add files" />
                </StackPanel>
            </Border>

            <StackPanel Spacing="4">
                <local:SettingsExpander x:Name="encryptMethodSettingsCard"
                VerticalAlignment="Top"
                Description="Choose the preferred encription method."
                Header="Encription Method"
                HeaderIcon="{ui:FontIcon Glyph=&#xF439;}">
                    <!--  TODO: This should be TwoWay bound but throws compile error in Uno.  -->
                    <ComboBox SelectedIndex="0">
                        <ComboBoxItem>AES-GCM</ComboBoxItem>
                        <ComboBoxItem>ChaCha20-Poly1305</ComboBoxItem>
                        <ComboBoxItem>RSA + AES</ComboBoxItem>
                    </ComboBox>
                    
                    <local:SettingsExpander.Items>
                        <local:SettingsCard Description="This is encryption method is...."
                    Header="What is "
                    IsClickEnabled="True" />

                        <!--<local:SettingsCard ContentAlignment="Left">
            <CheckBox Content="Here the ContentAlignment is set to Left. This is great for e.g. CheckBoxes or RadioButtons." />
        </local:SettingsCard>-->

                    </local:SettingsExpander.Items>
                </local:SettingsExpander>
                <local:SettingsCard Description="This file can only decrypt in this deivce."
                               Header="This device only"
                               HeaderIcon="{ui:FontIcon Glyph=&#xEC4E;}">
                    <ToggleSwitch />
                </local:SettingsCard>

                <local:SettingsCard x:Name="psdSettingCard"
   Description="Set Password for all files"
   Header="Password"
   HeaderIcon="{ui:FontIcon Glyph=&#xE75F;}">

                    <PasswordBox Width="300" PlaceholderText="Enter your password" PasswordChar="*" />

                </local:SettingsCard>

                <!-- 相关设置 -->
                <!--<Expander Header="Related settings" IsExpanded="False">
                    <StackPanel>
                        <TextBlock Text="Advanced font settings..." />
                        --><!-- 你可以在这里添加更多设置项 --><!--
                    </StackPanel>
                </Expander>-->
            </StackPanel>
                

            <!-- 搜索与筛选 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBox PlaceholderText="Type here to search" Grid.Column="0" />
                <ComboBox Grid.Column="1" Header="Filter by" SelectedIndex="0">
                    <ComboBoxItem Content="Scripts for all languages" />
                    <ComboBoxItem Content="Latin" />
                    <ComboBoxItem Content="Japanese" />
                    <!-- 更多语言 -->
                </ComboBox>
            </Grid>

            <ScrollViewer>
                <ItemsControl ItemsSource="{x:Bind FileList, Mode=OneWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="4" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="modules:File">
                            <Border BorderBrush="LightGray" BorderThickness="1"
                        Background="White"
                        Width="220" Height="160"
                        CornerRadius="8" Margin="8" Padding="12">
                                <StackPanel Spacing="8">
                                    <!-- 文件名 -->
                                    <TextBlock Text="{x:Bind FileName}" 
                                   FontSize="16"
                                   FontWeight="Bold" 
                                   TextTrimming="CharacterEllipsis"/>

                                    <!-- 文件路径 -->
                                    <TextBlock Text="{x:Bind FilePath}" 
                                   FontSize="12" 
                                   Foreground="Gray"
                                   TextTrimming="CharacterEllipsis" 
                                   MaxLines="1"/>

                                    <!-- 文件大小 -->
                                    <TextBlock Text="{x:Bind FileSize, Converter={StaticResource FileSizeConverter}}"
                                   FontSize="12" />

                                    <!-- 修改时间 -->
                                    <TextBlock Text="{x:Bind ModifiedDate}"
                                   FontSize="12" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

        </StackPanel>
    </ScrollViewer>

</Page>
